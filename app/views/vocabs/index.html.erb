<p id="notice"><%= notice %></p>

<h1>Vocabs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Def</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vocabs.each do |vocab| %>
      <tr>
        <td><%= vocab.name %></td>
        <td><%= vocab.def %></td>
        <td><%= vocab.category %></td>
        <td><%= link_to 'Show', vocab %></td>
        <td><%= link_to 'Edit', edit_vocab_path(vocab) %></td>
        <td><%= link_to 'Destroy', vocab, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

